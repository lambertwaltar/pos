<!-- if user is a cashier-->
<% if session[:role] == "Cashier"%>
	
		<legend> Cashier </legend>
		<div id="container" style="width:700px;margin-bottom:50px;">
			<div style="background-color:#CEF5AA;border:solid 1px;margin-left:15px;padding:3px;">
				step 1: Login with appropriate user name and password
			</div><br>
			<img src="/login.png" alt="image not seen" width="300" height="300"/>

			<div style="background-color:#CEF5AA;border:solid 1px;margin-left:15px;padding:3px;">
				step 2: Enter item and quantity and add to cart
			</div><br>
			<img src="/cashier.png" alt="image not seen" width="700" height="500" style="padding-left:10px;"/>
			<ul style="float:left">
				<li style="float:left">Enter Item name</li><br>
				<li style="float:left">Enter quantity</li><br>
				<li style="float:left">Add iitem to cart</li><br>
				<li style="float:left">Click mobile Money button to initiate transaction</li>

			</ul>

		</div>
<!-- if user is an admin -->
<%elsif session[:role] =="Admin"%>
	<legend> Administrator </legend>
		<div id="form" style="overflow: scroll; width:500px">
			<div style="background-color:#CEF5AA;border:solid 1px;margin-left:15px;padding:3px;">
				step 1: Login with appropriate user name and password
			</div><br>
			<img src="/login.png" alt="image not seen" width="300" height="300"/>
			<div style="background-color:#CEF5AA;border:solid 1px;margin-left:15px;padding:3px;">
				step 2: Select appropriate action to perform
			</div><br>
			<img src="/admin.png" alt="image not seen" width="300" height="300"/>
		</div>	
<%end%>
	  