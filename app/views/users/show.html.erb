<!-- table to hold information picked from the users database -->
<legend>System Users</legend>
<div id="container">
  <table>
    <tr style="background-color:#B1FFD4; height:15px;">
      <th> Username</th>
      <th> Role</th>
      <th> Status</th>
      <th></th>
    </tr>

    <% @users.each do |user| %> <!-- traverse array holding users information -->
      <tr style="height:8px;"></tr>
      <tr style="background-color:#CDF5DF;height:10px; color:#14311F;">
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td>
          <!-- check if user is currently logged in -->
          <%if session[:user_name]==user.username%>
           <marquee><%= "active" %></marquee>
          <%end%>
        </td>
        <td><%= link_to "Delete", user_path(user.id), method: :delete, data: {confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </table>
</div>
<!-- link to the admin menu-->
<div id="back">
<%= link_to "Back", :controller=>"admin", :action=>"index" %>
</div>