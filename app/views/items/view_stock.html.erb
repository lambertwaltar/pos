<!-- table to hold items picked from the items database -->
<legend>Inventory</legend>
<div id="container" style = "width:700px">
  <table style ="margin-left:10px;width:700px">
    <tr style="background-color:#B1FFD4; height:15px;">
      <th> Name</th>
      <th> Price</th>
      <th> Quantity</th>
      <th></th>
    </tr>

    <% @items.each do |item| %> <!-- traverse array holding items -->
      <tr style="height:8px;"></tr>
      <tr style="background-color:#D5F0D0;height:10px;color:#14311F;">
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity%></td>
        <td><%= link_to "Delete", item_path(item.id),method: :delete, data: {confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </table>
</div>
<!-- link to the admin menu-->
<div id="back">
<%= link_to "Back", :controller=>"admin", :action=>"index" %>
</div>